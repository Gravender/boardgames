{
  "name": "@board-games/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "test": "pnpm with-env vitest",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@board-games/auth": "workspace:*",
    "@board-games/db": "workspace:*",
    "@board-games/shared": "workspace:*",
    "@trpc/server": "catalog:",
    "drizzle-plus": "1.0.0-rc.1",
    "luxon": "^3.7.1",
    "posthog-node": "^5.1.0",
    "superjson": "2.2.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@board-games/eslint-config": "workspace:*",
    "@board-games/prettier-config": "workspace:*",
    "@board-games/tsconfig": "workspace:*",
    "@types/luxon": "^3.4.2",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vitest": "^3.0.7"
  },
  "prettier": "@board-games/prettier-config"
}
